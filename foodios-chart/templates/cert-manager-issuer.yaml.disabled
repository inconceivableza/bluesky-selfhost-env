{{- if and .Values.global.tls.enabled .Values.global.tls.certIssuer .Values.global.tls.cloudflare.apiToken }}
---
apiVersion: v1
kind: Secret
metadata:
  name: cloudflare-api-token
  namespace: {{ .Values.global.namespace }}
type: Opaque
stringData:
  api-token: {{ .Values.global.tls.cloudflare.apiToken }}
---
apiVersion: cert-manager.io/v1
kind: Issuer
metadata:
  name: {{ .Values.global.tls.certIssuer }}
  namespace: {{ .Values.global.namespace }}
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: {{ .Values.global.tls.email }}
    privateKeySecretRef:
      name: {{ .Values.global.tls.certIssuer }}
    solvers:
    - dns01:
        cloudflare:
          email: {{ .Values.global.tls.cloudflare.email | default .Values.global.tls.email }}
          apiTokenSecretRef:
            name: cloudflare-api-token
            key: api-token
{{- end }}
